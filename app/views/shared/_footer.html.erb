	<div id="email_drop">
	  <div><input type="text" name="email" id="email_input" placeholder="Keep in touch! "/></div>
	  <div><button type="button" id="email_submit" class="btn btn-xs btn-primary" data-loading-text="Submitting...">Submit Email</button></div>
	</div>
