<script>
		$('#email_submit').click(function() {
			var email = $('#email_input').val();
			var varData = 'email=' + email;
			var btn = $(this)
			btn.button('loading');
			$.ajax({
				type: 'GET',
				url: '/email',
				data: varData,
		      	global: false,
		      	success: function() {
		      	}
			}).always(function() {
				btn.button('reset');
			});	
			return false;			
		});	
</script>
